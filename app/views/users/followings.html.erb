<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <span><%= link_to "Microposts(#{@user.microposts.count})" , current_user %></span>
        <% if @user == current_user %>
          <span>Followings(<%= @user.following_users.count %>)</span>
          <span><%= link_to "Followers(#{@user.follower_users.count})" , followers_user_path %></span>
        <% end %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <section class="users_info">
      <h3>Followings</h3>
      <% @users.each do |user| %>
      <%= render partial: 'users/users', locals: { user: user } %>
      <% end %>
    </section>
  </div>
</div>