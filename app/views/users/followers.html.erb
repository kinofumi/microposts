<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <span><%= link_to "Microposts(#{@user.microposts.count})" , current_user %></span>
        <% if @user == current_user %>
          <span><%= link_to "Followings(#{@user.following_users.count})" , followings_user_path %></span>
          <span>Followers(<%= @users.count %>)</span>
        <% end %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <section class="users_info">
      <h3>Followers</h3>
      <% @users.each do |user| %>
      <%= render partial: 'users/users', locals: { user: user } %>
      <% end %>
    </section>
  </div>
</div>