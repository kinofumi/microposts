<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <span>Microposts(<%= @user.microposts.count %>)</span>
        <% if @user == current_user %>
          <span><%= link_to "Followings(#{@user.following_users.count})" , followings_user_path %></span>
          <span><%= link_to "Followers(#{@user.follower_users.count})" , followers_user_path %></span>
        <% end %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>